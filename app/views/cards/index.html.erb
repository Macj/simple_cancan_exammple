<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= link_to 'Show', card %></td>
        <% if can?(:edit, card) %>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <% end %>
        <% if can?(:delete, card) %>
          <td><%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
